  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
          <div
            class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg"
          >
            <div class="card col-lg-4 mx-auto">
              <div class="card-body px-5 py-5">
                <h3 class="card-title text-left mb-3">Add Shipping Address</h3>
                <form
                  action=""
                  method="post"
                  onsubmit="return validateForm()"
                >
                  <div class="form-group">
                    <label>Name *</label>
                    <input type="text" hidden value="<%=userData.id %>">
                    <input
                      type="text"
                      class="form-control p_input"
                 
                      style="color: white"
                      name="name"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label>Phone *</label>
                    <input
                      type="text"
                      class="form-control p_input"
               
                      style="color: white"
                      name="mobn"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label>City *</label>
                    <input
                      type="text"
                      class="form-control p_input"
                   
                      style="color: white"
                      name="city"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="country">Country *</label>
                    <select class="form-control p_input" style="color: white" name="country" id="country" required>
                      <option value="">Select a country</option>
                      <option value="India">India</option>
                      <option value="USA">Canada</option>
                      <option value="UK">United Kingdom</option>
                      <!-- Add more options for different countries -->
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="country">State *</label>
                    <select class="form-control p_input" style="color: white" name="state" id="state" required>
                      <option value="">Select a state</option>
                      <option value="Kerala">Kerala</option>
                      <option value="Mumbai">Delhi</option>
                      <option value="Delhi">Other</option>
                      <!-- Add more options for different countries -->
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Pincode *</label>
                    <input
                      type="text"
                      class="form-control p_input"
                      style="color: white"
                      name="pin"
                      required
                    />
                  </div>
                  <p style="margin: 0; color: #ec2424;" id="errorDisplay"></p>
                  <div class="text-center">
                    <button
                      type="submit"
                      class="btn btn-primary btn-block enter-btn"
                    >
                      Add
                    </button>
                  </div>
                  <p class="sign-up text-center">
                    Go Back To <a href="/userProfile">PROFILE</a>
                  </p>
                </form>
                <!-- 
