                    <input type="text" class="form-control p_input"value="<%=user.name%>" style="color: white;" name="name" required>
                  </div>
                  <div class="form-group">
                    <label>Email *</label>
                    <input type="email" class="form-control p_input" value="<%=user.email%>" style="color: white;" name="email" required>

                  </div>
                  <div class="form-group">
                    <label>Phone *</label>
                    <input type="text" class="form-control p_input" value="<%=user.mobile%>" style="color: white;" name="mno" required>
                  </div>
                  <div class="form-group">
                    <label>Profile Photo *</label>
                    <input type="file" class="form-control p_input" name="image" style="display: inline-block;
                    padding: 10px 20px;
                    background-color: #1d2f36;
                    color: #fff;
                    cursor: pointer;
                    border-radius: 3px;">
                  </div>
