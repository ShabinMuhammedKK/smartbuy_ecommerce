<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>SmartBuy</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
 
    <link rel="stylesheet" href="../../assets/css/style1.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../assets/images/favicon.png" />
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
          <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
            <div class="card col-lg-4 mx-auto">
              <div class="card-body px-5 py-5">
                <h3 class="card-title text-left mb-3">Add New Offer</h3>
                <form action="" method="post" onsubmit="return validateForm()">
                    <div class="form-group">
                        <label>Offer Tittle *</label>
                        <input type="text" hidden value="<%=offer._id %>" name="id">
                        <input type="text" class="form-control p_input" value="<%=offer.title%>" style="color: white;" name="title" required>
                      </div>
                      <div class="form-group">
                        <label>Description *</label>
                        <input type="text" class="form-control p_input" value="<%=offer.description%>" style="color: white;" name="description" required>
    
                      </div>
                      <div class="form-group">
                        <label>Offer Percentage *</label>
                        <input type="number" class="form-control p_input" value="<%=offer.offerPercentage%>" style="color: white;" name="offerPercentage" required>
                      </div>
                      <div class="form-group">
                        <label>Offer Starting Date *</label>
                        <input type="date" class="form-control p_input" value="<%=offer.startDate%>" style="color: white;" name="startDate" required>
                      </div>
                      <div class="form-group">
                        <label>Offer Ending Date *</label>
                        <input type="date" class="form-control p_input" value="<%=offer.endDate%>" style="color: white;" name="endDate" required>
                      </div>
                      <div class="form-group">
                        <label>Offer ID *</label>
                        <input type="text" class="form-control p_input" value="<%=offer.offerID%>" style="color: white;" name="ID" required>
                      </div>
                      <p style="margin: 0; color: #ec2424;" id="errorDisplay"></p>

                  <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block enter-btn">Add Offer</button>
                  </div>
                  <p class="sign-up text-center">Go Back To <a href="/admin/dashboard">DASHBOARD</a></p>                 
                </form>

                <% if (typeof message !== 'undefined') { %>
                  <div style="border: 1px solid #ccc; padding: 10px; background-color: #991c1c; text-align: center;">
                    <p style="margin: 0; color: #ffff;"><%= message %></p>
                  </div>
                <% } %>


                
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    
    <script src="../../assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../assets/js/off-canvas.js"></script>
    <script src="../../assets/js/hoverable-collapse.js"></script>
    <script src="../../assets/js/misc.js"></script>
    <script src="../../assets/js/settings.js"></script>
    <script src="../../assets/js/todolist.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
const alertSweet = function sweetalert() {
        const Toast = Swal.mixin({
          toast: true,
          position: "top",
          showConfirmButton: false,
          timer: 3000,
          timerProgressBar: true,
          didOpen: (toast) => {
            toast.addEventListener("mouseenter", Swal.stopTimer);
            toast.addEventListener("mouseleave", Swal.resumeTimer);
          },
        });

        Toast.fire({
          icon: "success",
          title: "Success",
        });
      };
      function validateForm() {
        var displayField = document.getElementById('errorDisplay');

          var title = document.forms[0]["title"].value;
          var description = document.forms[0]["description"].value;
          var offerPercentage = document.forms[0]["offerPercentage"].value;
          var ID = document.forms[0]["ID"].value;

          // Validate Offer Title and Description as string
          if (!/^[a-zA-Z0-9\s]+$/.test(title) || !/^[a-zA-Z0-9\s]+$/.test(description)) {
              // alert("Please enter only letters and spaces for Offer Title and Description.");
              displayField.textContent = "⚠️ Please enter only letters and spaces for Offer Title and Description";

              return false;
          }

          // Validate Offer Percentage as a number between 1 and 99
          if (isNaN(offerPercentage) || offerPercentage < 1 || offerPercentage > 99) {
              // alert("Please enter a valid offer percentage between 1 and 99.");
              displayField.textContent = "⚠️ Please enter a valid offer percentage between 1 and 99";

              return false;
          }

          // Validate Offer ID as capital letters only
          if (!/^[A-Z0-9]+$/.test(ID)) {
              // alert("Please enter capital letters for Offer ID.");
              displayField.textContent = "⚠️ Please enter capital letters for Offer ID";

              return false;
          }
          alertSweet()
          return true;
      }
  </script>
    
    <!-- endinject -->
  </body>
</html>

