                "rgba(255, 99, 132, 1)",
                "rgba(54, 162, 235, 1)",
                "rgba(255, 206, 86, 1)",
                "rgba(75, 192, 192, 1)",
                "rgba(153, 102, 255, 1)",
              ],
              borderWidth: 1,
              fill: true,
            },
          ],
        };

        var areaOptions = {
          plugins: {
            filler: {
              propagate: true,
            },
          },
          scales: {
            yAxes: [
              {
                gridLines: {
                  color: "rgba(204, 204, 204, 0.1)",
                },
              },
            ],
            xAxes: [
              {
                gridLines: {
                  color: "rgba(204, 204, 204, 0.1)",
                },
              },
            ],
          },
        };
        var areaChartCanvas = document
          .getElementById("areaChart")
          .getContext("2d");
        var areaChart = new Chart(areaChartCanvas, {
          type: "line",
          data: areaData,
          options: areaOptions,
        });
