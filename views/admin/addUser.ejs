<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS for additional styling */
        body {
            background-color: #053462;
        }
        .form-container {
            max-width: 700px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
        }
        #verify-button {
        text-decoration: none;
        color: white;
      }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="form-container">
            <h2 class="text-center">Add User</h2>
            <form action="/admin/addUser" method="post" onsubmit="return validateForm()" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" placeholder="Enter Name" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" placeholder="Enter Email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" placeholder="Mobile Number" class="form-control" id="phone" name="mno" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Profile Photo</label>
                    <input type="file" class="form-control" id="image" name="image" required>
                </div>
                <!-- <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" placeholder="Enter Password" class="form-control" id="password" name="password" required>
                </div> -->
                <div>
                    <button style="margin-left:35%" type="submit" class="btn btn-success mt-3">Submit</button>
                </div>
            </form>

            <% 
             if(typeof message !== 'undefined'){
                %>
                <p style="color : green;"><%= message %></p>
                <%
             }
            %>


        </div>
    </div>

    <!-- Link to Bootstrap JS and Popper.js for Bootstrap components (optional) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.min.js"></script>
    <script>
        function validateForm() {
            const phone = document.getElementById('phone').value;

            // Add your custom validation logic here

            // Example: Check if passwords match

            // Example: Check if phone number is valid (10 digits)
            if (!/^\d{10}$/.test(phone)) {
                alert("Invalid phone number");
                return false;
            }

            // You can add more validation rules as needed

            return true; // Form will be submitted if all validations pass
        }
    </script>
</body>
</html>